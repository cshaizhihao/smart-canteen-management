<!DOCTYPE html>
<html>
<head><title>Admin Panel - Smart Canteen</title></head>
<body>
  <h1>Admin Dashboard</h1>
  <a href="/logout">Logout</a>
  
  <h2>Manage Dishes</h2>
  <table border="1">
    <tr><th>Name</th><th>Price</th><th>Stock</th></tr>
    <% dishes.forEach(dish => { %>
      <tr><td><%= dish.name %></td><td><%= dish.price %></td><td><%= dish.stock %></td></tr>
    <% }) %>
  </table>

  <h3>Add New Dish</h3>
  <form action="/add-dish" method="POST">
    <input name="name" placeholder="Dish Name" required>
    <input name="price" type="number" step="0.1" placeholder="Price" required>
    <input name="stock" type="number" placeholder="Stock" required>
    <button type="submit">Add</button>
  </form>

  <h2>Recent Orders</h2>
  <ul>
    <% orders.forEach(order => { %>
      <li>Order #<%= order.id %>: <%= order.name %> - [<%= order.status %>]</li>
    <% }) %>
  </ul>
</body>
</html>
